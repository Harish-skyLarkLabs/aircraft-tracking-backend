# Django Settings
SECRET_KEY=django-insecure-aircraft-tracking-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=*

# Database Settings
DB_ENGINE=django.db.backends.postgresql
DB_NAME=aircraft_tracking
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# MinIO Object Storage Settings
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
MINIO_BUCKET_NAME=aircraft-tracking
# Public URL for frontend to access MinIO (without bucket name)
MINIO_PUBLIC_URL=http://localhost:9000

# Backend Public URL (for WebSocket stream URLs)
BACKEND_PUBLIC_URL=http://localhost:8000

# LiveKit WebRTC Streaming Configuration
# Set USE_LIVEKIT=true to enable WebRTC streaming via LiveKit
# When enabled, video is streamed via WebRTC (low latency) instead of WebSocket (Base64 frames)
USE_LIVEKIT=false
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

